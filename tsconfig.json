{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@features/*": ["src/features/*"],
      "@ui/*": ["src/ui/*"],
      "@lib/*": ["src/lib/*"],
      "@core/*": ["src/core/*"]
    }
  },
  "exclude": ["node_modules", "build", "config"],
  "include": ["src"],
}
