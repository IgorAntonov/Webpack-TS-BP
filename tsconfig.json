  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "noEmit": true,
    "strict": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "preserve",
  },
  "exclude": ["node_modules", "build", "config"],
  "include": ["src"]
}
